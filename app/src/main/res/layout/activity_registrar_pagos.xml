<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_blue_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <!-- BARRA DE NAVEGACION SUPERIOR-->
        <LinearLayout
            android:id="@+id/navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical">

            <!-- Boton Volver -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon_back"
                android:background="@drawable/icon_back_bgblue"
                app:tint="@android:color/white"
                android:contentDescription="Volver"
                android:padding="8dp"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <!-- Menú hamburgesa-->
            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon_menu"
                android:background="@drawable/icon_menu_bg"
                app:tint="@color/black"
                android:contentDescription="Menú"
                android:padding="8dp"/>

        </LinearLayout>


        <!-- SECCION PRINCIPAL-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="20dp"
            android:gravity="center_horizontal">

            <!--TITULO: Registro de Pagos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGISTRO DE PAGOS"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                android:letterSpacing="0.08"/>

            <!--SECCION1: Buscador de Cliente-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edittext_bg"
                android:layout_marginBottom="24dp"
                android:padding="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="DNI"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:background="#E0E0E0"
                    android:minHeight="48dp"/>

                <!--Input documento Cliente -->
                <EditText
                    android:id="@+id/input_Dni"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Documento"
                    android:inputType="number"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:background="@android:color/transparent"
                    android:minHeight="48dp"/>
            </LinearLayout>

            <!--Boton BUSCAR -->
            <Button
                android:id="@+id/btnBuscar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                android:backgroundTint="@color/azul_oscuro"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="Buscar"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp" />

            <!--SECCION2: Datos del Cliente -->
            <LinearLayout
                android:id="@+id/client_info_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_bg"
                android:backgroundTint="#E0E0E0"
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_marginBottom="60dp">

                <!--Nombre Cliente-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="APELLIDO NOMBRE"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <!--Documento Cliente-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOC. XXXXXXX"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <!--ID Cliente -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID XXXXX"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <!-- Fecha inscripcion -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FECHA INSCRIPCIÓN"
                    android:textColor="#388E3C"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <!--Tipo Cliente-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SOCIO / NO SOCIO"
                    android:textColor="#8E24AA"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>


            <Space
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>


            <!-- BOTON CONTINUAR -->
            <Button
                android:id="@+id/btnContinuarSocio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/azul_oscuro"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="CONTINUAR SOCIO"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp" />

            <!-- BOTON CONTINUAR -->
            <Button
                android:id="@+id/btnContinuarNoSocio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/azul_oscuro"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="CONTINUAR No Socio"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>